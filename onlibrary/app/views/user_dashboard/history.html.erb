<div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-r from-yellow-100 via-emerald-200 to-cyan-300 p-8 relative">

  <!-- Назад -->
  <div class="absolute top-8 left-8">
    <%= button_to user_dashboard_path, method: :get, class: 'w-12 h-12 flex items-center justify-center bg-cyan-900 text-white rounded-full shadow-xl hover:bg-yellow-900 transition-all duration-300 ease-in-out' do %>
      <span class="w-6 h-6 flex justify-center items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </span>
    <% end %>
  </div>

  <!-- Заголовок -->
  <h1 class="text-6xl font-extrabold text-gray-800 mb-12 drop-shadow-lg font-montserrat">
    Книги, которые Вы уже вернули
  </h1>

  <!-- Таблица -->
  <div class="w-full max-w-4xl bg-white shadow-lg rounded-lg overflow-hidden animate__animated animate__fadeIn">
    <table class="min-w-full text-lg text-gray-700">
      <thead class="bg-gradient-to-l from-yellow-900 to-cyan-900 text-white">
      <tr>
        <th class="py-4 px-6 text-left">Название</th>
        <th class="py-4 px-6 text-left">Автор</th>
        <th class="py-4 px-6 text-center">Дата выдачи</th>
        <th class="py-4 px-6 text-center">Дата возврата</th>
      </tr>
      </thead>
      <tbody>
      <% @operations.each do |operation| %>
        <tr class="hover:bg-yellow-100 transition-all duration-300 ease-in-out">
          <td class="py-4 px-6 border-b border-gray-300"><%= Book.find_by_id(operation.book).name %></td>
          <td class="py-4 px-6 border-b border-gray-300"><%= Book.find_by_id(operation.book).author %></td>
          <td class="py-4 px-6 border-b border-gray-300 text-center"><%= operation.took.strftime("%d-%m-%Y") %></td>
          <td class="py-4 px-6 border-b border-gray-300 text-center"><%= operation.returned.strftime("%d-%m-%Y") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>
