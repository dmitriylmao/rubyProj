<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <h1 class="text-2xl font-bold mb-4">
    Выдать книгу <%= @book.name %> пользователю <%= @user.username %>
  </h1>

  <%= form_with(url: admin_dashboard_take_book_user_path(@book.id, @user.id), method: :patch, local: true, class: "mt-4") do |form| %>
    <div class="flex justify-center">
      <%= form.submit "Подтвердить", class: "px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>