<div class="absolute top-8 left-8">
  <%= button_to admin_dashboard_path, method: :get, class: 'w-12 h-12 flex items-center justify-center bg-fuchsia-300 text-white rounded-full shadow-xl hover:bg-fuchsia-700 transition-all duration-300 ease-in-out' do %>
      <span class="w-6 h-6 flex justify-center items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </span>
  <% end %>
</div>
<div class="flex flex-col items-center justify-center h-screen bg-gradient-to-r from-violet-500 to-fuchsia-500 font-montserrat font-extrabold">
  <div class="flex flex-col p-4 items-center justify-center bg-gradient-to-r from-pink-400 to-pink-500 font-montserrat font-extrabold rounded-lg">
    <h1 class="text-4xl font-bold mb-8 font-montserrat font-extrabold">Добавить новую книгу</h1>

    <%= form_for :book do |f| %>
      <div class="mb-4">
        <%= f.label :name, "Название", class: 'block text-sm font-medium text-black-700' %>
        <%= f.text_field :name, class: 'mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-blue-500' %>
      </div>

      <div class="mb-4">
        <%= f.label :author, "Автор", class: 'block text-sm font-medium text-black-700' %>
        <%= f.text_field :author, class: 'mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-blue-500' %>
      </div>

      <div class="mb-4">
        <%= f.label :count,"Количество",  class: 'block text-sm font-medium text-black-700' %>
        <%= f.text_field :count, class: 'mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-blue-500' %>
      </div>

      <div class="mb-6">
        <%= f.submit 'Добавить книгу', class: 'w-full p-3 text-black bg-fuchsia-300 hover:bg-fuchsia-700 hover:bg-fuchsia-700 cursor-pointer rounded-lg shadow transition-all duration-300 ease-in-out' %>
      </div>
    <% end %>

  </div>



</div>

